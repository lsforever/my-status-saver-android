<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frameLayout_video"
    tools:context=".VideoPlayerActivity"
    android:background="#000000">


    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:use_controller="false"
        app:hide_on_touch="true">

    </com.google.android.exoplayer2.ui.PlayerView>

    <com.google.android.exoplayer2.ui.PlayerControlView
        android:id="@+id/controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:controller_layout_id="@layout/media_controller"
        app:layout_constraintBottom_toTopOf="@+id/adView_a_video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_a_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="@string/ad_id_banner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <com.leinardi.android.speeddial.SpeedDialView
        android:id="@+id/speed_dial_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/controls"
        app:layout_constraintEnd_toEndOf="parent"
        app:sdExpansionMode="top"
        app:sdMainFabClosedIconColor="#FFFFFF"
        app:sdMainFabClosedSrc="@drawable/ic_add_black_24dp"
        app:sdMainFabOpenedIconColor="#FFFFFF"
        app:sdMainFabOpenedSrc="@drawable/ic_close_black_24dp"
        app:sdUseReverseAnimationOnClose="true" />


</androidx.constraintlayout.widget.ConstraintLayout>