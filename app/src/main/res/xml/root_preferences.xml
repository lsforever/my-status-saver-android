<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="Look and Feel"
        app:iconSpaceReserved="false" >

        <ListPreference
            app:iconSpaceReserved="false"
            app:defaultValue="theme01"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="theme"
            app:title="Set Theme"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Save Folder" app:iconSpaceReserved="false">

        <Preference
            app:iconSpaceReserved="false"
            app:key="storage"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="/storage/emulated/0/Status Saver"
            app:summary="/storage/emulated/0/Status Saver"
            app:title="Choose storage location">
        </Preference>

    </PreferenceCategory>


    <PreferenceCategory app:title="Other" app:iconSpaceReserved="false">

        <Preference
            app:iconSpaceReserved="false"
            app:key="version"
            app:title="App Version">
        </Preference>

    </PreferenceCategory>


</androidx.preference.PreferenceScreen>
